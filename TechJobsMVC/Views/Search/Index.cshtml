<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" @(column.Key == ViewBag.searchType ? "checked" :"")/>
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
            
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>
    <div>


        @foreach (var job in ViewBag.jobs)
        {
            <table class="job-listing">
                <tr>
                    <td>ID: </td>
                    <td>@job.Id</td>
                </tr>
                <tr>
                    <td>Name: </td>
                    <td>@job.Name</td>
                </tr>
                <tr>
                    <td>Employer: </td>
                    <td><a asp-controller="List" asp-action="Jobs" asp-route-column="employer" asp-route-value="@job.Employer">@job.Employer</a></td>
                </tr>
                <tr>
                    <td>Location: </td>
                    <td><a asp-controller="List" asp-action="Jobs" asp-route-column="location" asp-route-value="@job.Location">@job.Location</a></td>
                </tr>
                <tr>
                    <td>Position Type: </td>
                    <td><a asp-controller="List" asp-action="Jobs" asp-route-column="positionType" asp-route-value="@job.PositionType">@job.PositionType</a></td>
                </tr>
                <tr>
                    <td>Skill: </td>
                    <td><a asp-controller="List" asp-action="Jobs" asp-route-column="coreCompetency" asp-route-value="@job.CoreCompetency">@job.CoreCompetency</a>y</td>
                </tr>
            </table>}

    </div>
    <hr />

    @{
       
    }

</div>
